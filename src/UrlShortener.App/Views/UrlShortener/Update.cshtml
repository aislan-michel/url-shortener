@model UrlShortener.App.Models.ShortUrl

@{
    ViewData["Title"] = "Update";
}


<form method="post" asp-action="Update" asp-route-id="@Model.ShortCode">
    <div class="mb-3">
        <label class="form-label mt-2">Expires in</label>
        <input class="form-control" type="date" name="expires" value="@Model.Expires"/>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>