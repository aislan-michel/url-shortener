@model IEnumerable<UrlShortener.App.Models.ShortUrl>

@{
    ViewData["Title"] = "URL Shortener";
    var shortCode = ViewData["shortCode"] as string;
}

<div class="mb-2">
    <a class="mt-2 btn btn-success" href="@Url.Action("Create")">Create</a>
</div>

<div>
    <form method="get" asp-action="Index">
        <div class="mb-3">
            <label class="form-label">Short code</label>
            <input type="text" class="form-control" name="shortCode" value="@shortCode">
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
        <a href="@Url.Action("Index", "UrlShortener")" class="btn btn-secondary">Clear filters</a>
        <a href="@Url.Action("Index", "UrlShortener")" class="btn btn-secondary">Reload</a>
    </form>

    <table class="table mt-2">
        <thead>
            <tr>
                <th scope="col">Short Code</th>
                <th scope="col">Created At</th>
                <th scope="col">Status</th>
                <th scope="col">Original URL</th>
                <th scope="col">Short URL</th>
                <th scope="col">Expires in</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var shortUrl in Model)
                {
                    <tr>
                        <th scope="row">@shortUrl.ShortCode</th>
                        <td>@shortUrl.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if(shortUrl.Active)
                            {
                                <a href='@Url.Action("Deactivate", "UrlShortener", new { shortCode = shortUrl.ShortCode })' class="badge bg-success">Active</a>
                            }
                            else
                            {
                                <a href='@Url.Action("Activate", "UrlShortener", new { shortCode = shortUrl.ShortCode })' class="badge bg-danger">Inactive</a>
                            }
                        </td>
                        <td>
                            <span>
                                @shortUrl.OriginalUrl 
                            </span>
                            <span 
                                class="copy"
                                data-bs-toggle="tooltip" data-bs-placement="top" title="click to copy original url" 
                                onclick="copyText('@shortUrl.OriginalUrl ')"
                                ><i class="bi bi-copy"></i></span>
                        </td>
                        <td>
                            <span>
                                <a class="link" href="@shortUrl.ShortCode" target="_blank">@shortUrl.ShortUrlFull</a> @shortUrl.ClickCounter clicks
                            </span>
                            <span 
                                class="copy"
                                data-bs-toggle="tooltip" data-bs-placement="top" title="click to copy short url" 
                                onclick="copyText('@shortUrl.ShortUrlFull')"
                                ><i class="bi bi-copy"></i></span>
                        </td>
                        <td>@(shortUrl.Expires.HasValue ? shortUrl.Expires.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                        <td>
                            <button type="button" class="btn btn-outline-dark" onclick="generateQrCode('@shortUrl.ShortCode')">QR Code</button>
                            <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@shortUrl.ShortCode">details</a>
                            <a class="btn btn-outline-dark" asp-action="Update" asp-route-id="@shortUrl.ShortCode">update</a>
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@(shortUrl.ShortCode)">delete</button>
                        </td>
                    </tr>

                    <div class="modal fade" id="deleteModal-@(shortUrl.ShortCode)" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="deleteModalLabel">Are you sure?</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Do you really want to delete this url <strong>@shortUrl.OriginalUrl</strong>?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@shortUrl.ShortCode">Yes</a>
                            </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <tr><td colspan="6">no results</td></tr>
            }
        </tbody>
    </table>
</div>


<div class="modal fade" id="qrCodeModal" tabindex="-1" aria-labelledby="qrCodeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="qrCodeModalLabel">Scan</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div id="qrCodeModalBody" class="modal-body">
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function generateQrCode(shortCode){
            $.get(`/UrlShortener/QrCode/${shortCode}`, function(data) {
                $("#qrCodeModalBody").html(`
                    <img src='data:image/png;base64,${data.qrCodeBytes}' />
                `);
                $("#qrCodeModal").modal('show');
            });
        }
    </script>
}


